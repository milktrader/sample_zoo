<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
	<!-- could not refactor per video -->
	<% @users.each do |user|  %>
		<li>
			<%= gravatar_for user, :size => 30 %>
			<%= link_to user.name, user %>
			<% if current_user.admin? %>
			|
			<%= link_to "delete", user, :method => :delete, :confirm => "Really?",  
			                            :title => "Delete #{user.name}"  %>
			<% end %>
		</li>
	<% end %>
</ul>

<%= will_paginate %>